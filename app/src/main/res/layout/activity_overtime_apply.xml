<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical">

    <!--加班申请-->
    <com.core.widget.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ly_head_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line"
                    android:background="@color/item_line"
                    android:layout_marginTop="8dp"/>

                <RelativeLayout
                    android:id="@+id/overtime_apply_starttime_rl"
                    style="@style/form_relative_customer2"
                    android:background="@color/item_color1">


                    <TextView
                        android:id="@+id/tv_set_starttime"
                        style="@style/form_relative_left_text2"
                        android:text="开始时间"
                        android:textColor="@color/text_main"
                        android:textSize="@dimen/text_main" />

                    <TextView
                        android:id="@+id/overtime_apply_starttime_tv"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:hint="选择时间（必填）"
                        style="@style/IMTbleLine_TextValue"
                        android:layout_toLeftOf="@+id/Start_time_img"
                        />
                    <ImageView
                        android:id="@+id/Start_time_img"
                        style="@style/Doc_Img"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line"
                    android:background="@color/item_line"
                    />

                <RelativeLayout
                    android:id="@+id/overtime_apply_endtime_rl"
                    style="@style/form_relative_customer2"
                    android:background="@color/item_color2">

                    <TextView
                        android:id="@+id/tv_set_endtime"
                        style="@style/form_relative_left_text2"
                        android:text="结束时间"
                        android:textColor="@color/text_main"
                        android:textSize="@dimen/text_main"  />

                    <TextView
                        android:id="@+id/overtime_apply_endtime_tv"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:hint="选择时间（必填）"
                        style="@style/IMTbleLine_TextValue"
                        android:layout_toLeftOf="@+id/end_time_img"
                        />
                    <ImageView
                        android:id="@+id/end_time_img"
                        style="@style/Doc_Img" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/item_line"
                    />
                <RelativeLayout
                    android:id="@+id/ry_leave_reason"
                    style="@style/form_relative_customer2"
                    android:background="@color/item_color2">


                    <TextView
                        style="@style/form_relative_left_text2"
                        android:text="工作任务"
                        android:textColor="@color/text_main"
                        android:textSize="@dimen/text_main" />


                </RelativeLayout>


                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/overtime_apply_explain_et"
                    style="@style/form_relative_right_text"
                    android:hint="请输入工作任务"
                    android:layout_marginLeft="20dp"
                    android:minHeight="200dp"
                    android:gravity="top"
                    android:padding="10dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </com.core.widget.CustomerScrollView>



    <LinearLayout
        android:id="@+id/ly_bottom_submit"
        style="@style/form_linear_customer">

        <Button
            android:id="@+id/overtime_apply_commit_btn"
            style="@style/from_button_base_bule"
            android:layout_marginTop="10dp"
            android:text="提   交" />
    </LinearLayout>

    <include layout="@layout/item_work_view" />

</LinearLayout>