<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    android:weightSum="2"
    android:background="@drawable/shape_linear_detail"
    android:orientation="horizontal" >
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:orientation="vertical" >
         <TextView
        android:id="@+id/tv_log_handler"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ry_setting_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="上一条"
        android:textColor="@color/blend_item_theme_color"
        android:textSize="14sp" />
        
    </LinearLayout>

   

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:src="@color/lightgrey" />

    <TextView
        android:id="@+id/tv_log_approve"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/ry_setting_selector"
        android:clickable="true"
        android:gravity="center"
        android:text="下一条"
        android:textColor="@color/blend_item_theme_color"
        android:textSize="14sp" />

</LinearLayout>