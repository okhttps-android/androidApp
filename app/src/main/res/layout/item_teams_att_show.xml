<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:id="@+id/item_teams_member_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="01"
            android:gravity="center"
            android:textSize="23sp"
           />

        <TextView
            android:id="@+id/item_teams_member_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/item_teams_member_number_tv"
            android:textColor="#575757"
            android:textSize="@dimen/text_hine"
            android:layout_marginTop="10dp"
            android:text="姓名"
            />
        <TextView
            android:id="@+id/item_teams_member_Section_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/item_teams_member_number_tv"
            android:layout_below="@id/item_teams_member_name_tv"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_hine"
            android:layout_marginTop="4dp"
            android:text="职位"/>
        <TextView
            android:id="@+id/item_teams_member_average_working_hours_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:textSize="@dimen/text_hine"
            android:text="平局工时：8.5小时/天"
            android:visibility="visible"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/oa_bg"/>
</LinearLayout>
