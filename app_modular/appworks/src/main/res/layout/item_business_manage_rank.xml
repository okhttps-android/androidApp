<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_business_rank_no_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFFF830C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/business_manage_rank_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="饶猛"
        android:textColor="#FF333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/business_manage_rank_bnum_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="4"
        android:textColor="#FF333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/business_manage_rank_winnum_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="5"
        android:textColor="#FF333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/business_manage_rank_rate_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="83"
        android:textColor="#FF333333"
        android:textSize="15sp" />

</LinearLayout>